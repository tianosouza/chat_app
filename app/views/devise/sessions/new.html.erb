<main class="bg-[#181D31] h-screen flex flex-col justify-center gap-10">
  <section class="flex flex-col items-center gap-1">
    <%= image_tag('01.png', width: 100) %>
    <h1 class="font-bold text-4x1 text-white my-4">Chat App - Ruby on Rails</h1>
    <p class="text-center font-semibold text-white">The is the chat app with RoR</p>
  </section>
  
  <section class="flex flex-col items-center">
    <h2 class="text-white font-bold text-2xl mb-5">Login</h2>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name), class: "flex flex-col") do |f| %>
      <div class="flex gap-1 my-2 items-center w-96">
        <%= f.label :email, class: "text-white font-semibold text-sm w-24" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "text-sm font-medium rounded w-full" %>
      </div>
    
      <div class="flex gap-1 my-2 items-center w-96">
        <%= f.label :password, class: "text-white font-semibold text-sm w-24" %>
        <%= f.password_field :password, autocomplete: "current-password", class: "text-sm font-medium rounded w-full" %>
      </div>
    
      <% if devise_mapping.rememberable? %>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me, class: "text-white font-semibold text-sm w-24" %>
        </div>
      <% end %>
    
      <div class="flex gap-1 my-5 items-center justify-center">
        <%= f.submit "Log in", class: "bg-green-800 rounded p-3 text-white font-semibold" %>
        <%= render "devise/shared/links" %>
      </div>
    <% end %>
    
  </section>
</main>

