<section class="flex flex-col gap-2 mt-10 items-center justify-center">
  <div class="flex flex-col">
    <h3 class="font-bold text-3xl text-white font-semibold"><%= room.name %> - Room</h3>
    <span class="text-white font-semibold">Users in this room: </span>
  </div>

  <section class="flex gap-5">
    <div class="py-2 px-10 flex flex-col gap-1 items-center border-sky-600 border rounded-lg my-2 w-0">
      <h3 class="text-white font-semibold text-center">Users in theis room</h3>

      <% room.users.all.each do |user| %>
        <div class="rounded underline text-white my-1 font-semibold text-sm">
          <%= user.email %>          
        </div>
      <% end %>

    </div>
  </section>
</section>